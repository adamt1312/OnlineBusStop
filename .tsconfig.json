{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "jsx": "react-native",
        "strict": true,
        "allowJs": true,
        "skipLibCheck": true,
        "noEmit": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./",
        "paths": {
            "@src/*": ["src/*"]
        }
    },
    "include": ["src"]
}
